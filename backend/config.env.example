# Database Configuration (SQLite - no server setup needed)
# SQLite database file will be created automatically as household_coo.db
# No host, port, username, or password needed for SQLite

# Database Debug (optional)
DB_ECHO=false

# Gmail API Configuration
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:5000/auth/callback
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly

# OpenAI API Configuration (for LLM service)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# WhatsApp API Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token